<!DOCTYPE html>
<html>
<head>
  <title>FriendsApp</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<% if current_user %>
  <%= render "navbar" %>

  <!-- load in user ID -->
  <script>
    $(document).ready(function(){
      FriendsApp.initialize();
    });
    FriendsApp.user_id = <%= current_user ? current_user.id : 0 %>
  </script>

<% end %>

<div id="content" class="container">
  <%= yield %>
</div>

</body>
</html>
