<!-- contains 1 "circle" -->
<div class="col-xs-4 friend-circle" data-id=<%= circle.id %> >
  <div class="panel panel-info">

    <!-- Circle header -->
    <div class="panel-heading">
      <%= circle.escape("circle_name") %> 

      <!-- [-] Hide btn -->
      <button type="button" class="circle-minimize" >&ndash;</button>

      <!-- [X] close btn -->
      <% if (circle.escape("removable") != "false") { %>
        <button type="button" class="close circle-close" >&times;</button>
      <% } %>
    </div>

    <!-- Circle members -->
    <div class="panel-body circle-members">
    </div>
  </div>
</div>
