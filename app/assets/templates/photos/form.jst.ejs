<!-- Button trigger modal -->
<button id="show-photo-modal"
  class="btn btn-info" data-toggle="modal" data-target="#photoFormModal">
  Add New Photo
</button>

<!-- Modal -->
<div class="modal fade" id="photoFormModal" tabindex="-1" role="dialog" 
  aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" 
          aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">New Photo</h4>
      </div>
      <div class="modal-body">

        <!-- Form -->
        <form role="form" enctype="multipart/form-data">
          <div class="form-group">
            <label for="photo-title">Photo Title</label>
            <input id="photo-title" name="photo[title]" type="text">
          </div>

          <div class="form-group">
            <label for="photo-url">Photo URL</label>
            <input id="photo-url" name="photo[url]" type="text">

            <input type="file" name="photo[file_data]">
          </div>

          <div class="form-group">
            <select class="photo form-control" name="photo[circle_id]">
              <% circles.each( function(circle) { %>
                <option value=<%=circle.id%>>
                  <%= circle.escape("circle_name") %>
                </option>
              <% }) %>
            </select>
          </div>

          <div class="form-group">
            <input type="submit" class="btn btn-primary" 
              id="new-photo-btn" value="Add Photo">
          </div>
        </form>

      </div>
   </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->


